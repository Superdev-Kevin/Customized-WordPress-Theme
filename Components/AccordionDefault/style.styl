$colorText            = lookup('$globalColorText')          || #222222
$containerPadding     = lookup('$globalContainerPadding')   || 20px
$contentMaxWidth      = lookup('$globalContentMaxWidth')    || 600px

$rupture.scale = lookup('$globalRuptureScale') || (0 426px 576px 768px 992px 1200px)
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px

.flyntComponent[is="flynt-accordion-default"]
  .container
    padding: 60px $containerPadding

  .content
    margin: 0 auto
    max-width: $contentMaxWidth

  .accordion
    list-style: none
    margin: 0
    padding: 0

  .panel
    padding-bottom: 15px

    &:last-child
      padding-bottom: 0

    &-trigger
      cursor: pointer
      outline: 0
      margin: 0
      padding: 15px 30px 15px 0
      position: relative
      width: 100%

    &-arrow
      $colorTextRgb = red($colorText), green($colorText), blue($colorText)
      background-image: url("data:image/svg+xml;utf8,<svg width='32' height='32' xmlns='http://www.w3.org/2000/svg'><polyline fill='none' stroke='rgb("$colorTextRgb")' stroke-width='2'  points='2,9 16,25 30,9 '/></svg>")
      background-position: center center
      background-repeat: no-repeat
      background-size: 100%
      display: block
      height: 20px
      position: absolute
      right: 0
      top: 50%
      transform: translateY(-50%)
      transition: transform .2s cubic-bezier(.165, .840, .440, 1.000)
      width: 30px

  [aria-expanded="true"]
    .panel-arrow
      transform: translateY(-50%) rotateX(180deg)

  .panel-content
    display: none

    > :first-child
      margin-top: 0
      padding-top: 0

    > :last-child
      margin-bottom: 0
      padding-bottom: 0
