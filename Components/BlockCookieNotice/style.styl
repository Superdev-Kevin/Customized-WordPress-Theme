$containerPadding     = lookup('$globalContainerPadding')   || 20px
$containerMaxWidth    = lookup('$globalContainerMaxWidth')  || 1270px
$rupture.anti-overlap = lookup('$globalRuptureOverlap')     || -1px
$rupture.scale        = lookup('$globalRuptureScale')       || (0 426px 576px 768px 992px 1200px)
$colorWhite           = lookup('$globalColorBackground')    || #FFFFFF

.flyntComponent[is='flynt-block-cookie-notice']
  background-color: $colorWhite
  border-top: 1px solid #000
  bottom: 0
  display: none
  font-size: 14px
  left: 0
  padding: 18px 0
  position: fixed
  right: 0
  z-index: 99

  .container
    align-items: center
    display: flex
    justify-content: space-between
    margin: 0 auto
    max-width: $containerMaxWidth
    padding: $containerPadding

    +below(575px)
      align-items: start
      flex-direction: column-reverse
      padding-top: 0

    .content
      word-break: break-word

      > :first-child
        margin-top: 0
        padding-top: 0

      > :last-child
        margin-bottom: 0
        padding-bottom: 0

    .btn-close
      appearance: none
      background-color: transparent
      background-image: url('../../Components/BlockCookieNotice/Assets/close.svg')
      background-position: center center
      background-repeat: no-repeat
      background-size: 46px auto
      border: 0
      cursor: pointer
      height: 100%
      height: 23px
      margin-left: 20px
      min-width: 33px
      opacity: 1
      padding: 0

      &:focus
        outline: 0

      +below(575px)
        align-self: flex-end
        margin: 0 0 10px
        min-width: 40px
        padding: 20px
        position: relative
        right: -12px
        width: 40px
