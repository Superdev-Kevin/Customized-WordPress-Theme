<div class="flyntComponent" is="flynt-block-image-text">
  <div class="container">
    <div class="box box--{{ imagePosition }}">
      <div class="box-image">
        <figure class="figure">
          <img class="figure-image lazyload"
            src="{{ image.src|resize(1280) }}"
            srcset="{{ placeholderImage(image.width, image.height) }}"
            data-srcset="
              {{ image.src|resize(1920) }} 1920w,
              {{ image.src|resize(1280) }} 1280w,
              {{ image.src|resize(750) }} 750w,
              {{ image.src|resize(375) }} 375w"
            data-sizes="auto"
            alt="{{ image.alt|e('html_attr') }}">
          {% if image.caption %}
            <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
          {% endif %}
        </figure>
      </div>
      <div class="box-content">
        {{ contentHtml|e('wp_kses_post') }}
      </div>
    </div>
  </div>
</div>
