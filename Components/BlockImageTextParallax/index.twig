<div class="flyntComponent" is="flynt-block-image-text-parallax">
  <div class="container">
    <div class="box box--{{ imagePosition }}">
      <div class="background {{ options.theme }}" data-parallax data-rellax-speed="0.8"></div>

        <div class="box-inner box-inner--content" data-parallax data-rellax-speed="-0.5">
          {{ contentHtml|e('wp_kses_post') }}
        </div>
        <div class="box-inner--image" data-parallax data-rellax-speed="3">
          <figure class="figure">
            <img class="figure-image lazyload"
              src="{{ image.src|resize(750) }}"
              srcset="{{ placeholderImage(750, 750 / image.aspect) }}"
              data-srcset="
                {{ image.src|resize(1920) }} 1920w,
                {{ image.src|resize(1280) }} 1280w,
                {{ image.src|resize(750) }} 750w,
                {{ image.src|resize(375) }} 375w"
              data-sizes="auto"
              alt="{{ image.alt|e }}">
          </figure>
        </div>

    </div>
  </div>
</div>
