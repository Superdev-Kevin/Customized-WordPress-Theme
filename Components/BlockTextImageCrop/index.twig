<div class="flyntComponent" is="flynt-block-text-image-crop">
  <div class="container">
    <div class="box box--{{ imagePosition }}">
      <div class="box-inner box-inner--image">
        <figure class="figure">
          <img class="figure-image lazyload"
            src="{{ image.src|resize(720) }}"
            srcset="{{ placeholderImage(720, 720 / image.aspect) }}"
            data-srcset="
              {{ image.src|resize(720) }} 720w,
              {{ image.src|resize(375) }} 375w"
            data-sizes="auto"
            alt="{{ image.alt|e }}">
          {% if image.caption %}
            <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
          {% endif %}
        </figure>
      </div>
      <div class="box-inner box-inner--content">
        {{ contentHtml|e('wp_kses_post') }}
        {% if buttonLink %}
          <a class="button-link" href="{{ buttonLink.url|e('esc_url') }}"{% if buttonLink.target %} target="{{ buttonLink.target|e }}" rel="noreferrer noopener"{% endif %}>
            {{ buttonLink.title|e }}
          </a>
      {% endif %}
      </div>
    </div>
  </div>
</div>
