<div class="flyntComponent" is="flynt-block-text-image-crop">
  <div class="container">
    <div class="box box--{{ imagePosition }}">
      <div class="box-inner box-inner--image">
        <figure class="figure">
          <img class="figure-image lazyload"
            src="{{ image.src|resize(750) }}"
            srcset="{{ placeholderImage(750, 750 / image.aspect) }}"
            data-srcset="
              {{ image.src|resize(1920) }} 1920w,
              {{ image.src|resize(1280) }} 1280w,
              {{ image.src|resize(750) }} 750w,
              {{ image.src|resize(375) }} 375w"
            data-sizes="auto"
            alt="{{ image.alt|e }}">
          {% if image.caption %}
            <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
          {% endif %}
        </figure>
      </div>
      <div class="box-inner box-inner--content">
        {{ contentHtml|e('wp_kses_post') }}
        {% if link %}
          <a class="link" href="{{ link.url|e('esc_url') }}"{% if link.target %} target="{{ link.target|e }}" rel="noreferrer noopener"{% endif %}>
            {{ link.title|e }}
          </a>
      {% endif %}
      </div>
    </div>
  </div>
</div>
