<figure class="figure paragraph">
  <img class="figure-image lazyload"
    src="{{ image.src|resize(1280, 720, 'center') }}"
    srcset="{{ transparentPng(image.aspect) }}"
    data-srcset="
      {{ image.src|resize(1920, 1080, 'center') }} 1920w,
      {{ image.src|resize(1280, 720, 'center') }} 1280w,
      {{ image.src|resize(750, 422, 'center') }} 750w"
    data-sizes="auto"
    alt="{{ image.alt|e('html_attr') }}">
  {% if image.caption %}
    <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
  {% endif %}
</figure>
