<figure class="figure">
  <img class="figure-image lazyload"
    src="{{ image.src|resize(1280, 720) }}"
    srcset="{{ transparentPng(16/9) }}"
    data-srcset="
      {{ image.src|resize(1920, 1080) }} 1920w,
      {{ image.src|resize(1280, 720) }} 1280w,
      {{ image.src|resize(750, 422) }} 750w"
    data-sizes="auto"
    alt="{{ image.alt|e('html_attr') }}">
  {% if image.caption %}
    <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
  {% endif %}
</figure>
