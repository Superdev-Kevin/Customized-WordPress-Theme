$colorBackground = lookup('$globalColorBackground') || #FFFFFF
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px
$rupture.scale = lookup('$globalRuptureScale') || (0 426px 576px 768px 992px 1200px)

.flyntComponent[is='flynt-document-default']
  fieldset
    border: 0
    margin: 0 0 1rem
    padding: 0

  legend
    display: inline-block
    font-weight: bold
    margin-bottom: .5rem

  label
    display: inline-block
    margin-bottom: .2rem

  [type='text'],
  [type='email']
  [type='search'],
  textarea,
  select
    -webkit-appearance: none
    border: 1px solid rgba(0, 0, 0, .5)
    font-family: inherit

  input,
  select,
  textarea
    padding: 10px
    margin: 0 0 1rem

  [type='checkbox'],
  [type='radio']
    margin: 0 .5rem .5rem 0
    position: relative
    top: -2px
