<div is="flynt-form-newsletter-mailchimp" class="flyntComponent componentSpacing {{ options.theme }}">
  <div class="container centerMaxWidthContainer">
    {% if contentFooterHtml %}
      <div class="preContent">
        {{ contentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <form action="" class="form centerContentMaxWidth">
      <input type="text" class="form-input" placeholder="{{ emailPlaceholder }}">
      <button type="submit" class="form-submit button">{{ submitButton }}</button>
    </form>
    {% if contentFooterHtml %}
      <div class="postContent">
        {{ contentFooterHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
  </div>
</div>
