    {% if htmlContent %}
      {{ htmlContent }}
    {% endif %}
    {% if buttonLink.url %}
      <a target={% if buttonLink.target %}"{{ buttonLink.target }}" rel="noreferrer noopener"{% else %}"_self"{% endif %} class="btn btn--primary">{{ buttonLink.title|e }}</a>
    {% endif %}
  </div>
</div>
