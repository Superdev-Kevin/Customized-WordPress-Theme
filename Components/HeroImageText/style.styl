$containerPadding     = lookup('$globalContainerPadding')   || 20px
$containerMaxWidth    = lookup('$globalContainerMaxWidth')  || 1280px
$contentMaxWidth      = lookup('$globalContentMaxWidth')    || 600px
$rupture.anti-overlap = lookup('$globalRuptureOverlap')     || -1px
$rupture.scale        = lookup('$globalRuptureScale')       || (0 426px 576px 768px 992px 1200px)
$headings             = 'h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6'

.flyntComponent[is="flynt-hero-image-text"]
  .container
    margin: 0 auto

  .wrapper
    background: rgba(0, 0, 0, .8)
    position: relative

  .image
    height: 400px
    object-fit: cover
    width: 100%

  .content
    background: linear-gradient(to top, rgba(0, 0, 0, .75), rgba(0, 0, 0, 0))
    align-items: center
    display: flex
    height: 100%
    justify-content: center
    left: 0
    padding: 0 $containerPadding
    position: absolute
    top: 0
    width: 100%

    &-inner
      color: #fff
      max-width: $contentMaxWidth
      text-align: center

      {$headings}
        color: inherit

      > :first-child
        margin-top: 0
        padding-top: 0

      > :last-child
        margin-bottom: 0
        padding-bottom: 0

  +below('s')
    br
      content: ''

      &::before
        content: '\00a0'
