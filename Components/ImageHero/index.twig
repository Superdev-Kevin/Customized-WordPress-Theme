<div is="flynt-image-hero">
  <div class="imageHero">
    <img class="imageHero-imageElement" srcset="
      {{ image.src | resize(576, 288) }} 576w,
      {{ image.src | resize(768, 384) }} 768w,
      {{ image.src | resize(1200, 600) }} 1200w,
      {{ image.src | resize(1440, 720) }} 1440w"
      src="{{ image.src }}"
      sizes="100vw"
      alt="{{ image.alt }}">
  </div>
</div>
