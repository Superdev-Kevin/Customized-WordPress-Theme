<div class="flyntComponent" is="flynt-list-components">
  <div class="container">
    <ul class="components">
      {% for componentBlock in componentBlocks %}
        {% if componentBlock.readme %}
          <li class="component{% if not componentBlock.componentPreviewDesktop %} component--noImage{% endif %}">
            {% if componentBlock.componentPreviewDesktop %}
              <div class="component-previews">
                <div class="component-previewImage component-previewImage--desktop">
                  <img class="lazyload"
                      src="{{ componentBlock.componentPreviewDesktop.src|resize(600) }}"
                      srcset="{{ placeholderImage(600, 600 / componentBlock.componentPreviewDesktop.aspect) }}"
                      data-srcset="
                        {{ componentBlock.componentPreviewDesktop.src|resize(1800) }} 1800w,
                        {{ componentBlock.componentPreviewDesktop.src|resize(1200) }} 1200w,
                        {{ componentBlock.componentPreviewDesktop.src|resize(600) }} 600w,
                        {{ componentBlock.componentPreviewDesktop.src|resize(300) }} 300w"
                      data-sizes="auto"
                      alt="{{ image.alt|e }}">
                </div>
                {% if componentBlock.componentPreviewMobile %}
                  <div class="component-previewImage component-previewImage--mobile">
                    <img class="lazyload"
                        src="{{ componentBlock.componentPreviewMobile.src|resize(120) }}"
                        srcset="{{ placeholderImage(120, 120 / componentBlock.componentPreviewMobile.aspect) }}"
                        data-srcset="
                          {{ componentBlock.componentPreviewMobile.src|resize(670) }} 670w,
                          {{ componentBlock.componentPreviewMobile.src|resize(360) }} 360w,
                          {{ componentBlock.componentPreviewMobile.src|resize(240) }} 240w,
                          {{ componentBlock.componentPreviewMobile.src|resize(120) }} 120w,
                          {{ componentBlock.componentPreviewMobile.src|resize(60) }} 60w"
                        data-sizes="auto"
                        alt="{{ image.alt|e }}">
                  </div>
                {% endif %}
              </div>
            {% endif %}
            <div class="component-content">
              <h2>{{ componentBlock.readme.title }}</h2>
              {% if componentBlock.readme.html %}
                <p>{{ componentBlock.readme.html }}</p>
              {% elseif componentBlock.readme.text %}
                <p>{{ componentBlock.readme.text }}</p>
              {% endif %}
              {% if componentBlock.ctas %}
                <p>
                  {% for cta in componentBlock.ctas %}
                    <a href="{{ cta.link.url }}" class="btn btn--{{ cta.buttonType }}">
                      {{ cta.link.title }}
                    </a>
                  {% endfor %}
                </p>
              {% endif %}
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>
