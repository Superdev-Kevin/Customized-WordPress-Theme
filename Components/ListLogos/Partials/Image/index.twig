<figure class="image">
  <img class="image-tag lazyload lazyload--fade"
    src="{{ image.src|resize(384, 216) }}"
    srcset="{{ placeholderImage(384, 216) }}"
    data-srcset="
      {{ image.src|resize(384, 216) }} 384w,
      {{ image.src|resize(240, 135) }} 240w,
      {{ image.src|resize(196, 110) }} 196w,
      {{ image.src|resize(160, 90) }} 160w,
      {{ image.src|resize(124, 70) }} 124w,
      {{ image.src|resize(106, 60) }} 106w"
    data-sizes="auto"
    alt="{{ image.alt|e }}">
  {% if item.title %}
    <figcaption class="image-caption">{{ link.title|e }}</figcaption>
  {% endif %}
</figure>
