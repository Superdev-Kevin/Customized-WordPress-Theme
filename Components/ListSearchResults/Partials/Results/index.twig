{% if posts %}
  <ul class="searchList boxShadow">
    {% for post in posts  %}
      <li class="searchList-item boxPadding">
        <article class="post">
          <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>
          <p>{{ post.preview.length(40).read_more(false) }}</p>
          <footer class="post-footer">
            <a href="{{ post.link }}">{{ readMore }}</a>
          </footer>
        </article>
      </li>
    {% endfor %}
  </ul>
{% endif %}
