$containerPadding     = lookup('$globalContainerPadding')   || 20px
$containerMaxWidth    = lookup('$globalContainerMaxWidth')  || 1270px
$contentMaxWidth      = lookup('$globalContentMaxWidth')    || 600px
$rupture.anti-overlap = lookup('$globalRuptureOverlap')     || -1px
$rupture.scale        = lookup('$globalRuptureScale')       || (0 426px 576px 768px 992px 1200px)
$colorAccent          = lookup('$globalColorAccent')        || #F98928
$colorBrand           = lookup('$globalColorBrand')         || #91C6C4
$colorText            = lookup('$globalColorText')          || #222222
$headings             = 'h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6'

.flyntComponent[is="flynt-list-social"]

  .container
    background-color: $colorBrand
    padding: 60px $containerPadding

  .content
    color: #fff
    margin: 10px auto
    max-width: $contentMaxWidth
    text-align: center

    {$headings}
      color: inherit

    > :first-child
      margin-top: 0
      padding-top: 0

    > :last-child
      margin-bottom: 0
      padding-bottom: 0

  .socialList
    display: flex
    flex-wrap: wrap
    justify-content: center
    list-style: none
    margin: 0
    padding: 0

    &-link
      cursor: pointer
      display: block
      height: 70px
      padding: 15px

      svg
        display: block
        height: 100%
        width: auto

        path
          transition: fill .2s cubic-bezier(.175, .885, .32, .275)

      &:hover
        svg
          path
            fill: gray




