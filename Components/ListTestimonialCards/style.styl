$containerPadding     = lookup('$globalContainerPadding')   || 20px
$containerMaxWidth    = lookup('$globalContainerMaxWidth')  || 1280px
$contentMaxWidth      = lookup('$globalContentMaxWidth')    || 600px
$rupture.anti-overlap = lookup('$globalRuptureOverlap')     || -1px
$rupture.scale        = lookup('$globalRuptureScale')       || (0 426px 576px 768px 992px 1200px)
$colorAccent          = lookup('$globalColorAccent')        || #F98928
$colorBackground      = lookup('$globalColorBackground')    || #ffffff
$colorText            = lookup('$globalColorText')          || #222222

.flyntComponent[is="flynt-list-testimonial-cards"]
  background-color: rgba(0, 0, 0, .03)
  padding: 60px 0

  .container
    margin: 0 auto
    padding: 0 $containerPadding
    max-width: $containerMaxWidth

  .preContent
    margin: 0 auto 50px
    max-width: $contentMaxWidth
    text-align: center

    > :first-child
      margin-top: 0
      padding-top: 0

    > :last-child
      margin-bottom: 0
      padding-bottom: 0

  .testimonialsList
    display: flex
    flex-wrap: wrap
    justify-content: center
    list-style: none
    margin: -20px -10px 0
    padding: 0

  .testimonial
    padding: 20px 10px 0
    width: 33%

    +below('m')
      width: 100%

  .content
    background-color: $colorBackground
    padding: 15px

    &::before
      background-image: url("data:image/svg+xml;base64,")
      background-repeat: no-repeat
      background-size: 120px auto
      content: ''
      display: block
      height: 20px
      margin-bottom: 10px
      position: relative
      width: 100%

    > :first-child
      margin-top: 0
      padding-top: 0

    > :last-child
      margin-bottom: 0
      padding-bottom: 0
