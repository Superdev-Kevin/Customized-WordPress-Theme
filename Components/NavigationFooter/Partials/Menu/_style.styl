$colorWhite = lookup('$globalColorPrimaryWhite') || #FFF
$rupture.anti-overlap = lookup('$globalRuptureOverlap') || -1px
$rupture.scale = lookup('$globalRuptureScale') || (0 576px 768px 992px 1200px)

.menu
  display: flex
  list-style: none
  margin: 0 -.25rem
  padding: 0

  +below('s')
    flex-direction: column

  &-item
    margin: 0 1.25rem 0 0

    +below('l')
      margin-right: 1rem

    +below('m')
      margin-right: .5rem

    +below('s')
      margin-right: 0

  &-link
    color: $colorWhite
    display: inline-block
    font-size: 16px
    font-weight: 400
    line-height: 1
    padding: .25rem
    text-decoration: none
    transition: opacity .4s

    +below('s')
      padding: .75rem .25rem

    &:focus,
    &:hover
      color: $colorWhite
      opacity: .5
