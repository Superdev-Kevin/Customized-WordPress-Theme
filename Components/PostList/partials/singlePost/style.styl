@import '../../config.styl'

&-article
  border-radius: 4px
  box-shadow: 0 2px 4px rgba(0, 0, 0, .15)
  margin: 30px 0
  padding: 15px

  &:first-child
    margin-top: 0

  &:last-child
    margin-bottom: 0

&-content
  overflow: hidden
  zoom: 1

&-thumbnailWrapper
  display: table-cell
  padding-right: 15px
  vertical-align: top

  +below('s')
    margin-bottom: 15px

&-contentWrapper
  display: table-cell
  vertical-align: top
  width: 1000000px

  +below('s')
    &-postThumbnailWrapper,
    &-postContentWrapper
      display: block
      width: 100%
