$rupture.scale        = lookup('$globalRuptureScale')       || (0 426px 576px 768px 992px 1200px)
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px
$containerPadding     = lookup('$globalContainerPadding')   || 20px
$containerMaxWidth    = lookup('$globalContainerMaxWidth')  || 1280px
$colorText            = lookup('$globalColorText')          || #222222

.flyntComponent[is="flynt-slider-image-gallery"]
  .container
    margin: 60px auto

  .slider-main
    background: rgba(0, 0, 0, .8)
    height: 650px
    position: relative

    +below('l')
      height: 512px

    +below('m')
      height: 385px

    +below('s')
      height: 250px

    .slick-list,
    .slick-track
      height: 100%

    .slide
      height: 100%

      .figure
        height: 100%

        &-image
          height: 100%
          left: 50%
          max-width: none
          position: relative
          transform: translateX(-50%)
          width: auto

        &-caption
          background: rgba(255, 255, 255, .5)
          background-color: rgba(0, 0, 0, .3)
          color: #fff
          bottom: 0
          display: inline-block
          font-size: .8rem
          padding: .25rem .5rem
          position: absolute
          right: @bottom

  .slide
    display: none
    outline: 0
    overflow: hidden
    position: relative

    &:first-child,
    &.slick-slide
      display: block

    .figure
      margin-bottom: 0

  .slider-thumb
    margin-top: 1rem

    .slide
      cursor: pointer
      opacity: .5
      padding: 0 5px
      transition: opacity .2s ease-out

      img
        height: 65px
        width: auto

      +above('hd')
        &:hover
          opacity: 1

      &.slick-current
        cursor: default
        opacity: 1

  // SLICK ARROWS
  .slick-arrow
    cursor: pointer
    display: none
    height: 50px
    outline: 0
    position: absolute
    text-indent: -99999px
    top: 50%
    transform: translateY(-50%)
    width: 30px
    z-index: 2

    &.slick-prev
      background: url('../../Components/SliderImages/Assets/arrow-left.svg') no-repeat center
      left: 20px

      +below('l')
        left: 10px

    &.slick-next
      background: url('../../Components/SliderImages/Assets/arrow-right.svg') no-repeat center
      right: 20px

      +below('l')
        right: 10px

    &.slick-disabled
      opacity: 0
      transition: opacity .2s ease-out, visibility 0s linear .2s
      visibility: hidden
