$maxWidth = $global-layout-maxWidth is defined ? $global-layout-maxWidth : 1140px
rupture.scale = $global-layout-scale is defined ? $global-layout-scale : 0 400px 800px 1200px

$containerMaxWidth = 1440px
$fixedHeightDesktop = 600px
$fixedHeightMobile = 300px
$useContainer = false
$useFixedHeight = true

[is='wps-image']
  *,
  *:before,
  *:after
    box-sizing: border-box

  .imageHero
    if $useContainer
      center($maxWidth)
    else
      center($containerMaxWidth)
      padding-left: 0
      padding-right: 0

    &-container
      display: block
      width: 100%

      if $fixedHeight
        height: $fixedHeightDesktop

        +below(2)
          height: $fixedHeightMobile

    &-image
      if $useFixedHeight
        display: block
        height: 100%
        object-fit: cover
        width: 100%
      else
        height: auto
        max-width: 100%
