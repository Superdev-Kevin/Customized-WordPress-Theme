<!DOCTYPE html>
<html class="{{ body_class }}" lang="{{ site.language }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} {{ __('Feed', 'flynt-starter-theme') }}" href="{{ site.rss2 | e('esc_url') }}">
    {{ function('wp_head') }}
  </head>
  <body role="document">
    {% block layout %}
      <section class="pageWrapper">
          <header class="mainHeader">
            {% block header %}
              {{ renderComponent('NavigationMain') }}
            {% endblock %}
          </header>
          <main class="mainContent" role="main">
            {% if passwordProtected %}
              {{ passwordForm }}
            {% else %}
              {% block content %}
                No <code>{{ '{% block components %}' }}</code> defined for this template.
              {% endblock %}
            {% endif %}
          </main>
          <footer class="mainFooter">
            {% block footer %}
              {{ renderComponent('NavigationFooter') }}
              {{ renderComponent('BlockCookieNotice') }}
            {% endblock %}
          </footer>
        </section>
    {% endblock %}
    <div class="wpFooter">
      {{ function('wp_footer') }}
    </div>
  </body>
</html>
